<div class="modal fade" id="videoPopup" role="dialog">
  <div class="modal-dialog modal-lg">
    <div class="embed-responsive embed-responsive-16by9">
      <iframe id="video-embed-iframe" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen class="embed-responsive-item"></iframe>
    </div>
  </div>
</div>

<script>
  var playVideo = document.getElementsByClassName('video-link');
  var videoModal = document.getElementById("videoPopup"); //grab the element
    
  for (var i = 0; i < playVideo.length; i++){
    playVideo[i].onclick = function() {
      document.getElementById('video-embed-iframe').src = this.getAttribute('embedLink');
      videoModal.classList.toggle('active');
    };
  };

  // close modal onclick outside
  videoModal.onclick = function() {
    document.getElementById('video-embed-iframe').src = "";
    videoModal.classList.toggle('active');
  }
</script>

<style>
  .modal.active{
    display: flex;
    opacity:1;
  }
  .modal {
    position: fixed;
    background: rgba(0,0,0,.8);
    opacity: 0;
    align-items: center;
    justify-content: center;
    transition: .3s ease-in-out;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    z-index: 1050;
    display: none;
    overflow: hidden;
    -webkit-overflow-scrolling: touch;
    outline: 0; 
  }
  .modal-dialog {
    display: inline-block;
    width: 1000px;
    max-width: calc(100% - 30px);
    text-align: left;
    vertical-align: middle;
  }

.embed-responsive {
    position: relative;
    display: block;
    height: 0;
    padding-bottom: 56.25%;
    overflow: hidden;
}
.embed-responsive iframe {
    top: 0;
      position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border: 0;
}
</style>